	print('\nWe shall first begin by choosing the number of color print on the T-shirt.')
	print('\nAs referenced in the chart above^, here are your options:')
	print('\na.) 1 Color print.')
	print('b.) 2 Color print.')
	print('c.) 3 Color print.')
	print('d.) 4 Color print.')
	print('e.) 5 Color print.')

	print('\nPlease ENTER the letter that corresponds with the like of your choosing.')

	while True:
		userChoiceI = input('\nPlease ENTER a, b, c, d, or e:')
		if userChoiceI == 'a':
			print('\nYou\'ve selected \'1 Color Print\'.')
			print('\nNext, you shall select the \'size\' of the T-shirts.')
			print('\nAs referenced in the chart above^, here are your options:')
			print('\na.) Youth - $19.68 ')
			print('b.) Adult[s-xl] - $19.99 ')
			print('c.) Adult[2xl-5xl] - $21.64 ')
			print('\nPlease ENTER the letter that corresponds with the like of your choosing.')
			while True:
				userChoiceI = input('\nPlease ENTER a, b, or c:')
				if userChoiceI == 'a':
					print('\You\'ve selected \'Youth for $19.68\'.')
