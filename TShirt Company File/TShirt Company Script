def endScript():
	while True:
		userChoiceII = input('To end the script, please ENTER "end": ')
		if userChoiceII == 'end':
			print('\You\'ve have now selected to end the script. Hope you enjoyed.')
			print('\nYou will now be kicked from the script shortly.')
			print('\n\nLOADING...............')
			print('You have now been kicked from the script. Cheers! :)')
			print('\n')
			break
		else:
			print('\nPlease only ENTER "end"! >:|')


