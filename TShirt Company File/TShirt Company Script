# _____________________Strictly Script________________________________


print ('\t\t\t\n\nWelcome to the \"T-Shirt Sale\" Conversion Calculator!!!')

while True:
	name = input('\nBefore we begin, what is your name?: ')
	if name.isalpha():
		print('\nAwesome! We can now begin {}.\n\n'.format(name.title()))
		break
	else:
		print('\nCANNOT continue if space was left empty.')
		print('Also, please be sure to ENTER your name using a-z characters only.')

Chart()

while True:
	buys = int(input('\nIn starting, please ENTER the amount of T-Shirts you would like to buy: '))
	if 0 <= buys < 12:
		print('\nIn order to purchase T-shirts from our store, we require that you purchase in bulk.')
		print('Any order over 11 T-shirts will satisfy that requirement.')
		print('Try again.......')
	elif 12 <= buys <= 24:
		print('\nYou have selected to buy {} T-shirts.'.format(buys))
		print('Let\'s begin.')
		print('\nLOADING...............')
		OptionOne()
		break
	elif 25 <= buys <= 49:
		print('\nYou have selected to buy {} T-shirts.'.format(buys))
		print('Let\'s begin.')
		print('\nLOADING...............')
		OptionTwo()
		break
	elif 50 <= buys <= 199:
		print('\nYou have selected to buy {} T-shirts.'.format(buys))
		print('Let\'s begin.')
		print('\nLOADING...............')
		OptionThree()
		break
	elif 200 <= buys <= 299:
		print('\nYou have selected to buy {} T-shirts.'.format(buys))
		print('Let\'s begin.')
		print('\nLOADING...............')
		OptionFour()
		break
	elif 300 <= buys:
		print('\nYou have selected to buy {} T-shirts.'.format(buys))
		print('You\'ve gone overboard. Because of this, your only option is to call for a quote.')
		print('\nLOADING...............')
		endScript()
		break
	else:
		print('\nPlease only ENTER adaquite integers! >:|')


